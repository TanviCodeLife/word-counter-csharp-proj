@{
  Layout = "_Layout";
}
<div class="container">
  <div class="jumbotron">
    <h1>Enter a word and a phrase below</h1>
  </div>
  <form id="word-count" action="/words-result" method="post">
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputLetterOrWord">Enter a word:</label>
        <input type="text" class="form-control" id="inputLetterOrWord" name="inputLetterOrWord" placeholder="Enter a string">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputStringToCheck">Enter a phrase:</label>
        <input type="text" class="form-control" id="inputStringToCheck" name="inputStringToCheck" placeholder="Enter a string">
      </div>
    </div>
    <button type="submit" class="btn btn-primary" id= "alignButton">Get Count!</button>
  </form>
  <div class="row">
    <div class="col-lg-8">
      <div class="card" id="result">
        <div class="card-header">
          <h4 class="card-title">Your Word Count Here!</h4>
        </div>
        <div class="card-body">
