@{
  Layout = "_Layout";
}
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Word Counter</h1>
    <p class="lead">Enter a word and a phrase below</p>
  </div>
  <form action="/words/words-result" method="post">
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputLetterOrWord">Enter a word:</label>
        <input type="text" class="form-control" id="inputLetterOrWord" name="inputLetterOrWord" placeholder="Enter a string" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputStringToCheck">Enter a phrase:</label>
        <input type="text" class="form-control" id="inputStringToCheck" name="inputStringToCheck" placeholder="Enter a string" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Get Count !</button>
  </form>
  <br>
  <br>
  <h3>Previous Word Count Plays</h3>
  <ul>

    @using WordCounter.Models;
    @if (Model.Count == 0)
    {
      <p>Start Playing To Add To Your List of Plays.</p>
    }
    @if (Model.Count != 0)
    {
      @foreach (Word word in Model)
      {

        <li><a href="/words/@word.GetId()">Word: @word.GetInputLetterOrWord()</a></li>
        <li>Phrase: @word.GetInputStringToCheck()</li>
        <li>Count: @word.GetCount()</li>
        <p>--------------</p>
      }
    }

  </ul>
  <a class="btn btn-primary" href="/" role="button">Go Back To Home Page!</a>
  </div>
